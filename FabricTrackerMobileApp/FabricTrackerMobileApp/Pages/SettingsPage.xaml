<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="FabricTrackerMobileApp.Pages.SettingsPage"
    Title="Settings">

    <ScrollView>
            <TableView Intent="Settings" RowHeight="50">
                <TableRoot>
                    <TableSection Title="General">
                    <ViewCell>
                            <StackLayout Orientation="Horizontal" Padding="15,5,15,5">
                            <Button Text="Data Backup / Restore" Command="{Binding NavigateToDataBackupRestorePage}" Padding="5" FontSize="Medium" BackgroundColor="Transparent" TextColor="DodgerBlue" />
                            <!--<Label Text="Data Backup / Restore" Padding="5"  />-->
                            <Label Text=">" TextColor="DodgerBlue" HorizontalOptions="EndAndExpand" Padding="5" FontSize="Medium"/>
                            </StackLayout>
                        </ViewCell>
                    </TableSection>
                </TableRoot>
            </TableView>
        </ScrollView>
</ContentPage>

