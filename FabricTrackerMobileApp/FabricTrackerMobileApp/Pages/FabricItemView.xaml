<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="FabricTrackerMobileApp.Pages.FabricItemView"
    Title="Fabric Item">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Command="{Binding Save}" />
    </ContentPage.ToolbarItems>
    
    <ScrollView>
        <StackLayout>
            <Grid Margin="0,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.3*" />
                    <ColumnDefinition Width="0.7*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <!--Row 1-->
                    <RowDefinition Height="100" />
                    <!--Row 2-->
                    <RowDefinition Height="40" />
                    <!--Row 3-->
                    <RowDefinition Height="25" />
                    <!--Row 4-->
                    <RowDefinition Height="40" />
                    <!--Row 5-->
                    <RowDefinition Height="25" />

                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <!--Row 19-->
                    <RowDefinition Height="40" />
                    <!--Row 20-->
                    <RowDefinition Height="40" />
                    <!--Row 21-->
                    <RowDefinition Height="80" />
                    <!--Row 22-->
                    <RowDefinition Height="40" />

                </Grid.RowDefinitions>

                <!--Row 1 Image Capture-->
                <!--<BoxView Grid.Column="0" Grid.Row="0" BackgroundColor="LightGray" />-->
                <Image Grid.Column="0" Grid.Row="0"
                       Source="{Binding ImageSource}"
                       HeightRequest="100"
                       WidthRequest="100"
                       Aspect="AspectFill" />

                <StackLayout Grid.Column="1" Grid.Row="0">
                    <Button Text="Choose Image" Command="{Binding ChooseImageCommand}" />
                    <Button Text="Capture Image" Command="{Binding ChooseImageCommand}" />
                </StackLayout>

                <!--Row 2 MainCategory Picker-->
                <Label Grid.Column="0" Grid.Row="1"
                       Padding="10,0,0,0"
                       VerticalTextAlignment="Center"
                       HorizontalTextAlignment="End"
                       FontSize="Small"
                       Text="MainCategory" />

                <Picker Grid.Column="1" Grid.Row="1"
                        Margin="0,0,10,0"
                        ItemsSource="{Binding MainCategoriesList}"
                        ItemDisplayBinding="{Binding MainCategoryName}"
                        x:Name="mcPicker"
                        Title="--Select MainCategory--"
                        SelectedItem="{Binding SelectedMainCategory, Mode=TwoWay }"
                        SelectedIndexChanged="mcPicker_SelectedIndexChanged"
                        />
                
                <!--Row 3 Add MainCategory Button-->   
                <Label Grid.Column="1" Grid.Row="2">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="&#x2b;" FontFamily="{StaticResource FontAwesomeSolid}" TextColor="Blue" FontSize="Small">
                                <Span.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding AddMainCategoryCommand}" />
                                </Span.GestureRecognizers>
                            </Span>

                            <Span Text=" Add New MainCategory" TextColor="Blue" FontSize="Small">
                                <Span.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding AddMainCategoryCommand}" />
                                </Span.GestureRecognizers>
                            </Span>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                    
                <!--Row 4 SubCategories Picker-->
                <Label Grid.Column="0" Grid.Row="3"
                       Padding="10,0,0,0"
                       VerticalTextAlignment="Center"
                       HorizontalTextAlignment="End"
                       FontSize="Small"
                       Text="SubCategory" />

                <Picker Grid.Column="1" Grid.Row="3"
                        Margin="0,0,10,0"
                        ItemsSource="{Binding SubCategoriesList}"
                        ItemDisplayBinding="{Binding SubCategoryName}"
                        x:Name="scPicker"
                        Title="--Select SubCategory--"
                        SelectedItem="{Binding SelectedSubCategory}" />
                        

                <!--Row 5 Add New SubCategory Button-->
                <Label Grid.Column="1" Grid.Row="4">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="&#x2b;" FontFamily="{StaticResource FontAwesomeSolid}" TextColor="Blue" FontSize="Small">
                                <Span.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding AddSubCategoryCommand}" />
                                </Span.GestureRecognizers>
                            </Span>

                            <Span Text=" Add New SubCategory" TextColor="Blue" FontSize="Small">
                                <Span.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding AddSubCategoryCommand}" />
                                </Span.GestureRecognizers>
                            </Span>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>

                <!--Row 6 Name -->
                <Label Grid.Column="0" Grid.Row="5"
                       Padding="10,0,0,0"
                       VerticalTextAlignment="Center"
                       HorizontalTextAlignment="End"
                       FontSize="Small"
                       Text="Name" />
                <Entry Grid.Column="1" Grid.Row="5" Margin="0,0,10,0" Text="{Binding FabricItem.Name}" />

                <!--Row 7 Remaining Inches-->
                <Label Grid.Column="0" Grid.Row="6"
                       Padding="10,0,0,0"
                       VerticalTextAlignment="Center"
                       HorizontalTextAlignment="End"
                       FontSize="Small"
                       Text="Remaining Qty (in inches)*" />
                <Entry Grid.Column="1" Grid.Row="6"
                       Placeholder="Enter Total Inches Remaining..."
                       Margin="0,0,10,0"
                       Text="{Binding FabricItem.TotalInches}" />

                <!--Row 8 Fat Qtr Qty-->
                <Label Grid.Column="0" Grid.Row="7"
                       Padding="10,0,0,0"
                       VerticalTextAlignment="Center"
                       HorizontalTextAlignment="End"
                       FontSize="Small"
                       Text="Fat Quarter Qty" />

                <Entry Grid.Column="1" Grid.Row="7"
                       Margin="0,0,10,0"
                       Text="{Binding FabricItem.FatQtrQty}"/>

                <!--Row 9 Width-->
                <Label Grid.Column="0" Grid.Row="8"
                       Text="Width"
                       Padding="10,0,0,0"
                       VerticalTextAlignment="Center"
                       HorizontalTextAlignment="End"
                       FontSize="Small" />

                <Picker Grid.Column="1" Grid.Row="8"
                        Margin="0,0,10,0"
                        SelectedItem="{Binding FabricItem.Width}"/>

                <!--Row 10 Details Heading-->
                <Label Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="9"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"
                       BackgroundColor="#2A0944"
                       TextColor="White"
                       FontAttributes="Bold"
                       Margin="0,0,0,0"
                       Text="Details" />

                <!--Row 11 Background Color-->
                <Label Grid.Column="0" Grid.Row="10"
                       Padding="10,0,0,0"
                       VerticalTextAlignment="Center"
                       HorizontalTextAlignment="End"
                       FontSize="Small"
                       Text="Background Color" />

                <Entry Grid.Column="1" Grid.Row="10"
                       Margin="0,0,10,0"
                       Text="{Binding FabricItem.BackgroundColor}" />

                <!--Row 12 Accent Color 1-->
                <Label Grid.Column="0" Grid.Row="11"
                       Padding="10,0,0,0"
                       VerticalTextAlignment="Center"
                       HorizontalTextAlignment="End"
                       FontSize="Small"
                       Text="Accent Color 1" />

                <Entry Grid.Column="1" Grid.Row="11"
                       Margin="0,0,10,0"
                       Text="{Binding FabricItem.AccentColor1}" />

                <!--Row 13 Accent Color 2-->
                <Label Grid.Column="0" Grid.Row="12"
                       Padding="10,0,0,0"
                       VerticalTextAlignment="Center"
                       HorizontalTextAlignment="End"
                       FontSize="Small"
                       Text="Accent Color 2" />

                <Entry Grid.Column="1" Grid.Row="12"
                       Margin="0,0,10,0"
                       Text="{Binding FabricItem.AccentColor2}" />

                <!--Row 14 Accent Color 3-->
                <Label Grid.Column="0" Grid.Row="13"
                       Padding="10,0,0,0"
                       VerticalTextAlignment="Center"
                       HorizontalTextAlignment="End"
                       FontSize="Small"
                       Text="Accent Color 3" />

                <Entry Grid.Column="1" Grid.Row="13"
                       Margin="0,0,10,0"
                       Text="{Binding FabricItem.AccentColor3}" />

                <!--Row 15 Source Information Heading-->
                <Label Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="14"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"
                       BackgroundColor="#2A0944"
                       TextColor="White"
                       FontAttributes="Bold"
                       Margin="0,0,0,0"
                       Text="Source Information" />

                <!--Row 16 Source-->
                <Label Grid.Column="0" Grid.Row="15"
                       Padding="10,0,0,0"
                       VerticalTextAlignment="Center"
                       HorizontalTextAlignment="End"
                       FontSize="Small"
                       Text="Source" />

                <Entry Grid.Column="1" Grid.Row="15"
                       Margin="0,0,10,0"
                       />

                <!--Row 15-->
                <Label Grid.Column="0" Grid.Row="16"
                       Padding="10,0,0,0"
                       VerticalTextAlignment="Center"
                       HorizontalTextAlignment="End"
                       FontSize="Small"
                       Text="Source Url" />

                <Entry Grid.Column="1" Grid.Row="16"
                       Margin="0,0,10,0" />

                <!--Row 16-->
                <Label Grid.Column="0" Grid.Row="17"
                       Padding="10,0,0,0"
                       VerticalTextAlignment="Center"
                       HorizontalTextAlignment="End"
                       FontSize="Small"
                       Text="Original Purchase Date" />

                <DatePicker Grid.Column="1" Grid.Row="17"
                       Margin="0,0,10,0" />

                <!--Row 17-->
                <Label Grid.Column="0" Grid.Row="18"
                       Padding="10,0,0,0"
                       VerticalTextAlignment="Center"
                       HorizontalTextAlignment="End"
                       FontSize="Small"
                       Text="Brand" />

                <Entry Grid.Column="1" Grid.Row="18"
                       Margin="0,0,10,0" />

                <!--Row 18-->
                <Label Grid.Column="0" Grid.Row="19"
                       Padding="10,0,0,0"
                       VerticalTextAlignment="Center"
                       HorizontalTextAlignment="End"
                       FontSize="Small"
                       Text="Designer" />

                <Entry Grid.Column="1" Grid.Row="19"
                       Margin="0,0,10,0" />

                <!--Row 19-->
                <Label Grid.Column="0" Grid.Row="20"
                       Padding="10,0,0,0"
                       VerticalTextAlignment="Center"
                       HorizontalTextAlignment="Center"
                       FontSize="Small"
                       Text="Discontinued?" />

                <Switch Grid.Column="1" Grid.Row="20" HorizontalOptions="Start"
                       Margin="0,0,10,0" />

                <!--Row 20-->
                <Label Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="21"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"
                       BackgroundColor="#2A0944"
                       TextColor="White"
                       FontAttributes="Bold"
                       Margin="0,0,0,0"
                       Text="Misc." />

                <!--Row 21-->
                <Label Grid.Column="0" Grid.Row="22"
                       Padding="10,0,0,0"
                       VerticalTextAlignment="Center"
                       HorizontalTextAlignment="End"
                       FontSize="Small"
                       Text="Notes" />
                <StackLayout Grid.Column="1" Grid.Row="22" BackgroundColor="LightGray" Padding="1" Margin="0,0,10,0">
                <Editor Grid.Column="1" Grid.Row="20"
                        BackgroundColor="White" HeightRequest="77" />
                </StackLayout>

                <!--Row 22-->
                <Label Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="23"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"
                       BackgroundColor="#2A0944"
                       TextColor="White"
                       FontAttributes="Bold"
                       FontSize="Small"
                       Margin="0,0,0,0"
                       Text="End of Form - Tap 'Save' on top to save changes" />
            </Grid>
        </StackLayout>
    </ScrollView>
</ContentPage>

